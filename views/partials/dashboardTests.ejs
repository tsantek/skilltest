<div class="dash-item">
    <h4> <strong><%= testItem[0].name %></strong></h4>
    <div class="row">
        <div class="col-4">
            <h5>Number of Questions:</h5>
            <div class="total-number">
                <%=testItem[0].total %>
            </div>
        </div>
        <div class="col-4 code-containter">
            <h5>Test Code:</h5>
            <div id=clone class="code-container">
                <p id="p1">
                    <%=testItem[0].code %>
                </p>
            </div>
            <a class="clone-btn" onclick="copyToClipboard('#p1')"><i class="far fa-clone"></i></a>
        </div>



        <div class="col-4 time-updated-created-container">
            <h5>Created:</h5>
            <p><strong>Time: <%=testItem[0].created_at.getHours()%>:<%=testItem[0].created_at.getMinutes()%></strong></p>
            <p><strong> Date: <%=testItem[0].created_at.getDate()%>/<%= testItem[0].created_at.getMonth()%>/<%= testItem[0].created_at.getFullYear()%>
          </strong></p>
            <h5>Last update: </h5>
            <p><strong>Time: <%=testItem[0].updated_at.getHours()%>:<%=testItem[0].updated_at.getMinutes()%></strong></p>
            <p><strong> Date: <%=testItem[0].updated_at.getDate()%>/<%= testItem[0].updated_at.getMonth()%>/<%= testItem[0].updated_at.getFullYear()%>
          </strong></p>
        </div>
    </div>


    <div class="questions-div">
        <h5>Test Question:</h5>



        <div class="accordion" id="accordionExample">

            <% for (let i = 0; i < questions.length; i++){ %>
                <div class="card">
                    <div class="card-header" id="headingOne">
                        <h2 class="mb-0">
                            <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapse<%=questions[i].id %>" aria-expanded="true" aria-controls="collapseOne">
                           <%=questions[i].question %>
                      </button>
                        </h2>
                    </div>

                    <div id="collapse<%=questions[i].id %>" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
                        <div class="card-body">
                            <p><strong>Answers:</strong></p>
                            <p>Correct:
                                <%=questions[i].correct %>
                            </p>
                            <hr>
                            <p>Incorrect I:
                                <%=questions[i].false_question_one %>
                            </p>
                            <hr>
                            <p>Incorrect II:
                                <%=questions[i].false_question_two %>
                            </p>
                            <button class="btn btn-success button-edit" href="#" class="btn btn-primary">Edit</button>
                        </div>
                    </div>
                </div>
                <%} %>
        </div>
    </div>
    <div class="btn-delete-container">
        <button class="btn btn-danger">DELETE TEST</button>
    </div>
</div>
<script>
    function copyToClipboard(element) {
        var $temp = $("<input>");
        $("body").append($temp);
        $temp.val($(element).text()).select();
        document.execCommand("copy");
        $temp.remove();
    }
</script>