<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.bundle.js"></script>
<div class="dash-container">
  <div class="user-heading">
    <div class="user-info">
      <h1><%=result[0].user_Name%></h1>
      <h3><%=result[0].email%></h3>
      <div id="myContent" contentEditable="true">This is an editable element. Click and type something!</div>
    </div>
    <% include userGraph %>
  </div>
  <div class="test-table">
    <% if (result[0].name) { %>
      <div class="dash-item">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Test</th>
              <th scope="col">Result</th>
              <th scope="col">Completed</th>
            </tr>
          </thead>
          <tbody>
          <% for(let i = 0; i < result.length; i++){%>
            <tr>
              <th scope="row"><%=result[i].name%></th>
              <td><%=result[i].correct%>/<%=result[i].total%></td>
              <td style="width: 20%;"><div class="status-complete">Completed</div></td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <h2><%= result[0].user_Name%> has not completed any tests!</h2>
    <% } %>
    <div class="dash-item">
      <div class="user-notes">
        <h5 class="notes">Notes about <%= result[0].user_Name%>:</h5>
        <% for (let i = 0; i < result[0].notes.length; i++) { %>
          <p><%=result[0].notes[i]%></p>
        <% } %>
        <form action="/notes/<%=recruiter[0].id%>/addnote/<%=result[0].user_id%>" method="post" id="notes">
          <textarea rows="4" cols="50" name="note" form="notes"></textarea>
          <input class="btn btn-primary" type="submit" style="display:block;">
        </form>
      </div>
    </div>
  </div>
</div>


