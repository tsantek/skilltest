<!doctype html>
<html lang="en">
  <head>
    <% include ../partials/head %>
    <title>Skill Test</title>
  </head>
  <body>
    <% include ../partials/nav %>
    <div class="main">
      <div class="board user-form">
        <h1>Register</h1>
        <form action="/registerRecruiters" method="post" id="regform" oninput='password.setCustomValidity(password.value != passwordConfirm.value ? "Passwords do not match." : "")'>
          <input type="text" name="name" placeholder="Name">
          <input type="email" name="email" placeholder="Email">
          <input type="password" id="password" name="password" placeholder="Password">
          <input type="password" id="passwordConfirm" placeholder="Confirm Password">
          <input class="btn" type="submit">
        </form>
      </div>
    </div>
    <% include ../partials/bs %>
  </body>
</html>

